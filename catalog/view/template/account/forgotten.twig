{{ header }}
<div class="breadcrumb-container">
  <h1 class="page-title">{{ heading_title }}</h1>
  <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
  </ul>
</div>
<div id="account-forgotten" class="container">
  <div class="row row-responsive">{{ column_left }}
    <div id="content" class="col">{{ content_top }}{{ content_center }}
      <h2>{{ heading_title }}</h2>
      <p>{{ text_email }}</p>
      <form id="form-forgotten" action="{{ confirm }}" method="post" data-oc-toggle="ajax">
        <fieldset>
          <legend>{{ text_your_email }}</legend>
          <div class="row mb-3 required">
            
            <div class="col-sm-10 form-floating">
              <input type="text" name="email" value="" placeholder="{{ entry_email }}" id="input-email" class="form-control"/>
              <label for="input-email" class="col-sm-4 col-form-label">{{ entry_email }}</label>
              <div id="error-email" class="invalid-feedback"></div>
            </div>
          </div>
        </fieldset>
        <div class="d-inline-block pt-2 pd-2 w-100">
          <div class="float-start"><a href="{{ back }}" class="btn btn-default">{{ button_back }}</a></div>
          <div class="float-end">
            <button type="submit" class="btn btn-primary">{{ button_continue }}</button>
          </div>
        </div>
      </form>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}