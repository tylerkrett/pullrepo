                <option value="ishi-customhover-fadeoutcenter" {% if style1 == 'ishi-customhover-fadeoutcenter' %} selected=selected {% endif %}>{{ entry_fadeoutcenter }}</option>
                <option value="ishi-customhover-fadeoutcorner" {% if style1 == 'ishi-customhover-fadeoutcorner' %} selected=selected {% endif %}>{{ entry_fadeoutcorner }}</option>
                <option value="ishi-customhover-fadeinoutcorner" {% if style1 == 'ishi-customhover-fadeinoutcorner' %} selected=selected {% endif %}>{{ entry_fadeinoutcorner }}</option>
                <option value="ishi-customhover-fadeinsquare" {% if style1 == 'ishi-customhover-fadeinsquare' %} selected=selected {% endif %}>{{ entry_fadeinsquare }}</option>
