{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a href="{{ return }}" data-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card panel-default">
            <div class="card-body">
                <div class="row">
                    <div class="form-group row mb-3">
                        <label class="col-sm-3 control-label text-end"><b>{{ text_author }}</b></label>
                        <div class="col-sm-8">{{ author }}</div>  
                    </div>
                </div>
                <div class="row">
                    <div class="form-group row mb-3">
                        <label class="col-sm-3 control-label text-end"><b>{{ text_email }}</b></label>
                        <div class="col-sm-8">{{ email }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group row mb-3">
                        <label class="col-sm-3 control-label text-end"><b>{{ text_date_added }}</b></label>
                        <div class="col-sm-8">{{ date_added }}</div>
                    </div>
                </div>
                <div class="tab-content">
                    <ul class="nav nav-tabs" id="language">
                        {% for language in languages %}
                        <li class="nav-item"><a class="nav-link {% if loop.first %} active {% endif %}" href="#language{{ language.language_id }}" aria-current="page" data-bs-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                        {% endfor %}
                      </ul>
            <div class="tab-content">
                {% for language in languages %}
                <div class="tab-pane {% if loop.first %} active {% endif %} fade show" id="language{{ language.language_id }}">
                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-end"><b>{{ text_comment }}</b></label>
                        <div class="col-sm-10">
                            {{ comment_descriptions[language.language_id] ? comment_descriptions[language.language_id].comment }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#language a:first').tab('show');
//--></script>
{{ footer }}