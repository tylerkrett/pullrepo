<section id="{{ ishi_randomnumer }}" class="ishitestimonials {{ column_class }}">
    <div class="section-header">  
      <h3 class="home-title">{{ heading }}</h3>
    </div>
    <div  class="ishitestimonials-container">
      <div class="testimonial-block">
        <div class="owl-carousel">        
          {% for testimonial in testimonials_array %}
            <div class="item">
              <div class="testimonial-img">
                  <img src="{{ testimonial.image }}" alt="{{ testimonial.username }}">
                </div>       
              <div class="user-details">
                {% if testimonial.username %}
                <span class="user-name">
                  {{ testimonial.username }}
                </span>
                {% endif %}
                {% if testimonial.designation %}
                <span class="user-designation">
                  {{ testimonial.designation }}
                </span>
                {% endif %}
                {% if testimonial.description %}
                <div class="user-description">
                  {{ testimonial.description }}
                </div>
                {% endif %}
                
              </div>
            </div>
          {% endfor %}    
        </div>
      </div>
     </div>
    </div>
      <script type="text/javascript">  
          $('#{{ ishi_randomnumer }} .owl-carousel').owlCarousel({
              loop:false,
              nav: false,
              rewind:true,
              dots:true,
        autoplay:{{ autoplay }},
              rtl: $('html').attr('dir') == 'rtl'? true : false,
              navText: ["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
              responsive:{
                0:{
                    items:1
                },
                544:{
                    items:1
                },
                768:{
                    items:1
                },
                992:{
                    items:1
                },
                1200:{
                    items:1
                }
              }
          });
      </script>
    <style>
      #{{ ishi_randomnumer }} .ishitestimonials-container{
        background-color: {{ bg_color }}
      }
    </style>
</section>